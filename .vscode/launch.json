    "version": "0.2.0",
    "configurations": [
        {
            "name": "Components Live Reload",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/apps/federated",
            "breakOnLoad": true,
            "sourceMaps": true,
            "skipFiles": ["**/node_modules/**"],
            "smartStep": true,
            "outFiles": ["${workspaceFolder}/apps/federated/**/*.js"]
        }
    ]
}
