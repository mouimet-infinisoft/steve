name: Pipeline

on:
  push:
    branches: [ ci ]
  pull_request:
    branches: [ dev ]

jobs:
  pipeline:
    name: Pipeline
    runs-on: ubuntu-latest
    env:
      SurgeDomain: ${{ secrets.SURGE_DOMAIN }}
      SurgeToken: ${{ secrets.SURGE_TOKEN }}
    strategy:
      matrix:
        node-version: [16.x]

    steps:
    - name: ðŸ”¥ Checkout
      uses: actions/checkout@v3
    - name: ðŸ“¦ Install
      uses: actions/setup-node@v3
      with:
        node-version: ${{ matrix.node-version }}
        cache: 'npm'
    - name: ðŸ“¦ Install
      run: npm install
    - name: ðŸ“¥ Initialize workspace
      run: npm install --location=global surge lerna
    - name: ðŸ”¨ Build
      run: lerna run build
    - name: ðŸ§ª Test
      run: npm run ci:test
    - name: ðŸš€ Deploy
      working-directory: ./apps/federated
      run: surge ./ ${{ secrets.SURGE_DOMAIN }} --token ${{ secrets.SURGE_TOKEN }}
    