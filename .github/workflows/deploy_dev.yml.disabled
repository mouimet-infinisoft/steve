name: Dev Pipeline

on:
  push:
    branches: [ dev ]
  pull_request:
    branches: [ dev ]

jobs:
  backend:
    name: Backend - Development Environment
    runs-on: ubuntu-latest
    env:
      FirebaseToken: ${{ secrets.FIREBASE_TOKEN_DEV }}
    strategy:
      matrix:
        node-version: [16.x]

    steps:
    - name: ðŸ”¥ Checkout
      uses: actions/checkout@v3
    - name: ðŸ“¦ Install
      uses: actions/setup-node@v3
      with:
        node-version: ${{ matrix.node-version }}
        cache: 'npm'
    - name: ðŸ“¥ Initialize workspace
      working-directory: ./backend
      run: npm i
    - name: ðŸš§ Configuration
      working-directory: ./backend
      run: firebase use bookt-dev --token $FirebaseToken --non-interactive
    - name: ðŸ”¨ Build
      working-directory: ./backend
      run: yarn run build
    - name: ðŸ§ª Test
      working-directory: ./backend
      run: yarn test
    - name: ðŸš€ Deploy
      working-directory: ./backend
      run: firebase deploy --only functions,firestore --token $FirebaseToken --non-interactive 
